<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="controller.LoginController" alignment="CENTER" styleClass="background" prefHeight="100.0" prefWidth="400.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
        <Separator/>
        <Label text="Login" styleClass="heading"/>
        
        <Separator/>
        <GridPane alignment="CENTER">	
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label" text="Username: "/>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label" text="Password: "/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" text="" fx:id="usernameTf"/>
            <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="1" text="" fx:id="passwordTf"/>
        </GridPane>

        <HBox>
            <Button maxWidth="1.7976931348623157E308" styleClass="button" onAction="#handleLogin" text="Login" HBox.hgrow="ALWAYS" fx:id="loginBtn"/>
            <Button maxWidth="1.7976931348623157E308" styleClass="button" onAction="#handleExit" text="Exit" HBox.hgrow="ALWAYS" fx:id="exitBtn"/>
        </HBox>

        <stylesheets>
            <URL value="@style.css"/>
        </stylesheets>
</VBox>